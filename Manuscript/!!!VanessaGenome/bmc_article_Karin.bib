	author = {Flynn, Jullien M. and Hubley, Robert and Goubert, Clément and Rosen, Jeb and Clark, Andrew G. and Feschotte, Cédric and Smit, Arian F.},
	month = nov,
	year = {2019},
	doi = {10.1101/856591},
	file = {Inskickad version:/Library/Application Support/Zotero/storage/KPSUM4DD/Flynn m. fl. - 2019 - RepeatModeler2 automated genomic discovery of tra.pdf:application/pdf},
