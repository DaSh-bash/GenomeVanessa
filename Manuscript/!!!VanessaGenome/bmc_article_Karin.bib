	pages = {1123--1142},
	file = {Full Text PDF:/Library/Application Support/Zotero/storage/5NE6NQLC/Brower m. fl. - 2006 - Fueling the fall migration of the monarch butterfl.pdf:application/pdf;Snapshot:/Library/Application Support/Zotero/storage/PU8ZKWAT/705426.html:text/html},
}

@article{baumlerComparativeMorphologyThorax2018,
	series = {Wings and {Powered} {Flight}: {Core} {Novelties} in {Insect} {Evolution}},
	title = {Comparative morphology of the thorax musculature of adult {Anisoptera} ({Insecta}: {Odonata}): {Functional} aspects of the flight apparatus},
