grep -Fwf Sens_input_vision.gene.names.out Candidate_Gene_Orthologs.tsv | awk  '{print $1, "\t", gsub("DPO", ""), "\t", gsub("Vcard", ""),"\t","Sens_input_vision"}' > Sens_input_vision_counts.tsv
